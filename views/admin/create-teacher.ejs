<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NEXT school | Login</title>
  <link rel="stylesheet" href="/stylesheets/global.css">
  <link rel="stylesheet" href="/stylesheets/admin-register.css">
</head>
<body>
  <main>
    <section class="container flex-center">
      <div class="login">
          <h1>Registrar professor</h1>
          <form action="/admin/criar/professor" method="POST">
            <div class="field">
                <div class="icon">
                    <img src="/images/icons/profile.svg" alt="Icone de perfil">
                </div>
                <fieldset class="input">
                  <label for="">Nome completo</label>
                  <input type="text" name="codigo" placeholder="Digite seu código" maxlength="11">
                </fieldset>
            </div>
            <div class="field">
                <div class="icon" id="toggle" onclick="showHide()">
                    <img src="/images/icons/profile.svg" alt="Icone de perfil">
                </div>
                <fieldset class="input">
                    <label for="">CPF</label>
                    <input type="password" name="cpf" placeholder="Digite seu CPF">
                </fieldset>
            </div>
            <select name="modulo_id" id="appearance-select">
                <option value="" disabled selected>Selecione um módulo</option>
                <option value="">FRONT-END</option>
                <option value="">BACK-END</option>
                <option value="">BANCO DE DADOS</option>
            </select>
            <div class="field password">
                <div class="icon" id="toggle" onclick="showHide()">
                    <img class="show-hide" src="/images/icons/show-password.svg" alt="Icone de perfil">
                </div>
                <fieldset class="input">
                    <label for="">Senha</label>
                    <input type="password" id="password" name="senha" placeholder="Digite sua senha">
                </fieldset>
            </div>
            <div class="input-file">
                <p>Enviar avatar</p>
                <input type="file" name="img_perfil">
            </div>
            <button class="button" type="submit">Registrar</button>
          </form>
      </div> 
    </section>
  </main> 
  <script>
    const password = document.getElementById('password')
    const toggle = document.getElementById('toggle')
    const img = document.querySelector('.show-hide')

    function showHide() {
        if (password.type === 'password') {
          password.setAttribute('type', 'text')
          toggle.classList.add('hide')
          img.src = '/images/icons/hide-password.svg'
        } else {
          password.setAttribute('type', 'password')
          toggle.classList.remove('hide')
          img.src = '/images/icons/show-password.svg'
        }
    }
</script>
</body>
</html>
